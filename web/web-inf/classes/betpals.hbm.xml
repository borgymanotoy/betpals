<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-lazy="false">

    <class name="se.telescopesoftware.betpals.domain.User" table="users">
        <id name="id" column="id">
            <generator class="native"/>
        </id>
        <property name="enabled"/>
        <property name="username"/>
        <property name="password"/>
    </class>

    <class name="se.telescopesoftware.betpals.domain.UserProfile">
        <id name="id" column="id">
            <generator class="native"/>
        </id>
        <property name="userId"/>
        <property name="name"/>
        <property name="surname"/>
        <property name="email"/>
        <property name="registrationDate"/>
        <property name="lastLoginDate"/>
        <property name="numberOfVisits"/>
        
        <set name="friendsIdSet" table="user_friends" lazy="false">
            <key column="user_id"/>
            <element column="friend_id" type="long"/>
        </set>
    </class>

    <class name="se.telescopesoftware.betpals.domain.Authority">
       <id name="id" column="id">
            <generator class="native"/>
        </id>
        <property name="userId" column="user_id"/>
        <property name="username"/>
        <property name="authority"/>
    </class>

    <class name="se.telescopesoftware.betpals.domain.Community" table="communities">
        <id name="id" column="id">
            <generator class="native"/>
        </id>
        <property name="ownerId"/>    
        <property name="created"/>    
        <property name="name"/>    
        <property name="description"/>    
        <set name="membersIdSet" table="community_members" lazy="false">
            <key column="community_id"/>
            <element column="member_id" type="long"/>
        </set>
    </class>

    <class name="se.telescopesoftware.betpals.domain.Group" table="groups">
        <id name="id" column="id">
            <generator class="native"/>
        </id>
        <property name="ownerId"/>    
        <property name="created"/>    
        <property name="name"/>    
        <property name="description"/>    
        <set name="membersIdSet" table="group_members" lazy="false">
            <key column="group_id"/>
            <element column="member_id" type="long"/>
        </set>
    </class>
    
    <class name="se.telescopesoftware.betpals.domain.Activity" table="activities">
        <id name="id" column="id">
            <generator class="native"/>
        </id>
        <property name="ownerId"/>    
        <property name="ownerName"/>    
        <property name="created"/>
        <property name="message"/>    
        <property name="activityType">
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">se.telescopesoftware.betpals.domain.ActivityType</param>
                <param name="type">12</param>
            </type>
        </property>
    </class>    
    <class name="se.telescopesoftware.betpals.domain.ActivityComment" table="activities_comments">
        <id name="id" column="id">
            <generator class="native"/>
        </id>
        <property name="activityId"/>    
        <property name="ownerId"/>    
        <property name="ownerName"/>    
        <property name="created"/>
        <property name="message"/>    
    </class>

    <class name="se.telescopesoftware.betpals.domain.ActivityLike" table="activities_likes">
        <id name="id" column="id">
            <generator class="native"/>
        </id>
        <property name="activityId"/>    
        <property name="ownerId"/>    
        <property name="ownerName"/>    
        <property name="created"/>
    </class>

</hibernate-mapping>